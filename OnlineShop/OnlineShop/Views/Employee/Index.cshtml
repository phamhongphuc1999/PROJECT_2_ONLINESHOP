@model IEnumerable<MODELS.EF.Employee>
@{
    ViewBag.Title = "Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="maintain-content-list">
    <div class="list-left">
        <div id="list">Nhân viên</div>
    </div>
</div>
<p>
    @Html.ActionLink("Thêm Nhân Viên", "Create", "Employee")
</p>
<table class="table">
    <tr>
        <th>Họ tên</th>
        <th>Giới tính</th>
        <th>Số điện thoại</th>
        <th>Ngày sinh</th>
        <th>Địa chỉ</th>
        <th>Lụa chọn</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Username)</td>
            <td>@Html.DisplayFor(modelItem => item.Sex)</td>
            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
            <td>@Html.ValueFor(modelItem => item.Birthday, "{0:dd/MM/yyyy}")</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
            <td>@Html.ActionLink("Xóa", "Delete", new { id = item.Id })</td>
        </tr>
    }
</table>
<script>
    if (@ViewBag.Flag == 0)
    {
        debugger
         alert("Tên tài khoản đã tồn tại");
    }
</script>
