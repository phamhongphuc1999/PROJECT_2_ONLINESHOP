                @Html.DisplayFor(modelItem => item.Sale)%
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BAOHANH)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { MASP = item.MASP, MALO = item.MALO }) |

                @Html.ActionLink("Xóa", "Delete", new { MASP = item.MASP, MALO = item.MALO })|
