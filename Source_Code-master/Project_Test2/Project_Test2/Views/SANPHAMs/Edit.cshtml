@model Project_Test2.Models.SANPHAM

@{
    ViewBag.Title = "Sửa";
}

<h2 style="color:#026BB8">Sửa thông tin sản phẩm</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
