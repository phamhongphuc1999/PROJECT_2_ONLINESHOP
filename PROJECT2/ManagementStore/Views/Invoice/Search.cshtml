@model MODELS.EF.Search
@{
    ViewBag.Title = "Invoice/Search";
    ViewBag.Link = "/hoa-don/thong-ke-theo-ngay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Content/jquery-ui.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#start,#end").datepicker({

                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd/mm/yy'
            });
        });</script>
}

@using (Html.BeginForm("SearchResult", "Invoice"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Thời gian</h4>
        <hr />
        <div class="col-12 align-items-stretch">
            <div class="row">
                <div class="form-group col-6">
                    @Html.Label("start", "Từ ngày", new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.start, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.start, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-6">
                    @Html.Label("end", "Đến ngày", new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.end, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.end, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}
