@model MODELS.EF.Product
@{
    ViewBag.Title = "Product/Detail";
    ViewBag.Link = "san-pham/chi-tiet-san-pham/" + ViewBag.ID + "-" + ViewBag.IdPackage;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal">
    <div class="card-body">

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Id Product</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" value="@Model.Id">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Id Package</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" value="@Model.IdPackage">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Name Product</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" value="@Model.NameProduct">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Import Price</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" value="@Model.ImportPrice">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Profix(%)</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" value="@Model.Profix">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Sale(%)</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" value="@Model.Sale">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Guarantee</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" value="@Model.Guarantee">
            </div>
        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        @Html.ActionLink("Edit", "Edit", new { Id = Model.Id, IdPackage = Model.IdPackage }) |
        @Html.ActionLink("Delete", "Delete", new { Id = Model.Id, IdPackage = Model.IdPackage }) |
        @Html.ActionLink("Quay lại", "Index", "Product")
    </div>
    <!-- /.card-footer -->
</form>
