 @model MODELS.EF.Product
@{
    ViewBag.Title = "Product/Detail";
    ViewBag.Link = "san-pham/chi-tiet-san-pham/" + ViewBag.ID;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form class="form-horizontal">
        <div class="col-12 align-items-stretch">
            <div class="card bg-light">
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-5 text-center">
                            <img src="@Model.Image" width="250" height="250" alt="user-avatar" class="img-circle img-fluid">
                        </div>
                        <div class="col-7">
                            <h2 class="lead"><b><strong>Name Product: </strong>@Model.NameProduct</b></h2><br />
                            <h2 class="lead"><b><strong>Id: </strong>@Model.Id</b></h2><br />
                            <h2 class="lead"><b><strong>Import Price: </strong>@Model.ImportPrice</b></h2><br />
                            <h2 class="lead"><b><strong>Export Price: </strong>@Model.ExportPrice</b></h2>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="card-body">

            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Profix(%)</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail3" readonly placeholder="Profix" value="@Model.Profix">
                </div>
            </div>

            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Sale(%)</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail3" readonly placeholder="Sale" value="@Model.Sale">
                </div>
            </div>

            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Guarantee</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail3" readonly placeholder="Guarantee" value="@Model.Guarantee">
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            @Html.ActionLink("Edit", "Edit", new { Id = Model.Id }) |
            @Html.ActionLink("Delete", "Delete", new { Id = Model.Id }) |
            @Html.ActionLink("Return product List", "Index", "Product")
        </div>
        <!-- /.card-footer -->
    </form>
