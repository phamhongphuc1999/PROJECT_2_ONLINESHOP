@model ManagementStore.Models.EmployeeModel
@{
    ViewBag.Title = "Employee/Edit";
    ViewBag.Link = "/nhan-vien/chinh-sua/" + ViewBag.ID;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Employee"))
{
    @Html.AntiForgeryToken()
    <form class="form-horizontal">
        <div class="card-body">
            <div class="form-group row">
                @Html.Label("inputEmail3", "Name", new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Name, new { id = "inputEmail3", @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("inputEmail3", "User Name", new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.UserName, new { id = "inputEmail3", @class = "form-control", placeholder = "User Name" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("inputEmail3", "Old Password", new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(model => model.ComfirmOldPassword, new { id = "inputEmail3", @class = "form-control", placeholder = "Old Password" })
                    @Html.ValidationMessageFor(model => model.ComfirmOldPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("inputEmail3", "New Password", new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(model => model.NewPassword, new { id = "inputEmail3", @class = "form-control", placeholder = "New Password" })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("inputEmail3", "Comfirm New Password", new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(model => model.ComfirmNewPassword, new { id = "inputEmail3", @class = "form-control", placeholder = "Comfirm New Password" })
                    @Html.ValidationMessageFor(model => model.ComfirmNewPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("inputEmail3", "Sex", new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Sex, new { id = "inputEmail3", @class = "form-control", placeholder = "Sex" })
                    @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("inputEmail3", "Phone", new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Phone, new { id = "inputEmail3", @class = "form-control", placeholder = "Phone" })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("inputEmail3", "Birthday", new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Birthday, "{0:dd/MM/yyyy}", new { id = "inputEmail3", @class = "form-control", placeholder = "Birthday" })
                    @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("inputEmail3", "Address", new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Address, new { id = "inputEmail3", @class = "form-control", placeholder = "Address" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </form>
}
